<head>
		<script type="text/javascript">
			
		function restar(num1,num2)
		{
			var r= Number(num1)-Number(num2);
			alert(r);
		}
		function sumar(num1,num2)
		{
			var r= Number(num1)+ Number(num2);
			alert(r);
		}
		function dividir(num1,num2)
		{
			var r= Number(num1)/ Number(num2);
			alert(r);
		}
		function multiplicar(num1,num2)
		{
			var r= Number(num1)*Number(num2);
			alert(r);
		}

		function oprime(valor){
			var obj=document.getElementById("num1");
			var val=obj.value;
			obj.value=val+valor; 

		}
		function ce(valor){
			var obj=document.getElementById("num1");
			var val=obj.value;
			obj.value=""; 

		}

		function Calcular(valor){
			var obj=document.getElementById("num1");
			var val=obj.value;
			var r=eval(val.toString());
			obj.value=val+valor; 
			alert(r);

		}

		</script>
</head>
